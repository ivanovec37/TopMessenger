<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:fa="http://schemas.fontawesome.io/icons/"
                    >
    <DataTemplate x:Key="WindowBorder" DataType="{x:Type Border}">
        <Border DockPanel.Dock="Top"
                    >
            <Grid HorizontalAlignment="Stretch"
                  Background="#292423"
                  >
                <Label Content="Top messenger"
                       Foreground="White"
                       FontWeight="Bold"
                       />
                <StackPanel HorizontalAlignment="Right"
                            Orientation="Horizontal"
                            Height="30"  VerticalAlignment="Top"
                            >
                    <Button Width="20" Height="20"
                            Background="Transparent"
                            Margin="0,0,10,0"
                            Command="{Binding WindowMinimizeCommand, ElementName=MainVM}"
                            >
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <fa:ImageAwesome Icon="WindowMinimize"
                                                 Foreground="White"
                                                 />
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Width="20"
                            Background="Transparent"
                            Margin="0,0,10,0"
                            Command="{Binding WindowMaximizeCommand, ElementName=MainVM}"
                            >
                        <Button.Template>
                            <ControlTemplate>
                                <fa:ImageAwesome Icon="WindowMaximize"
                                                 Foreground="White"
                                                 />
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Width="20"
                            Background="Transparent"
                            Command="{Binding AppCloseCommand, ElementName=MainVM}"
                            >
                        <Button.Template>
                            <ControlTemplate>
                                <fa:ImageAwesome Icon="WindowCloseOutline" 
                                                 Foreground="White"
                                                 />
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </DataTemplate>

</ResourceDictionary>